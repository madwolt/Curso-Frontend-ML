azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px
	
footer
	background naranja
	color rgba(white, 0.5)
	margin 0
	padding 1em 0
	text-align center
	width 100%

	h3
		font-size 14px
		font-weight normal

		strong
			display block

	.mejor
		&:after
		&:before
			content " - "

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px

		img
			width 52px

	.titular
		margin 0 60px 0 70px

		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
		
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -0.4em 1em 0 0
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0 black

			&:before
				color white
				content "\e600"
				font-family "iconitos"
				margin 0 0.3em 0 0

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px

		.avatar
			margin 0 1.2em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%

		.flechita
			background naranja
			color white
			display block
			padding 0.1em
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%

			&:after
				color white
				content "\e602"
				font-family "iconitos"
				text-shadow 1px 1px 0 black


nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		content ""
		border-bottom 20px solid transparent
		border-left 7px solid white 
		border-top 20px solid transparent
		left 0
		position absolute
		top 0

	.menu
		height 40px
		line-height 40px
		margin 0
		overflow-x auto
		padding 0
		white-space nowrap

		li
			display inline-block
			
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			overflow hidden
			padding 0.5em

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 0.2em
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					
				.estrellita
					color yellow
					text-decoration none

					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e601"

			.votos
				float left

				.down
				.up
					text-decoration none
					vertical-align middle

				.down
					color red
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e602" 
						vertical-align bottom

				.up
					color green
					&:before
						font-family "iconitos"
						font-size 1.5em
						content "\e603"
						vertical-align bottom

		.descripcion 
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0
					
					a
						text-decoration none
				
				.fecha 
					float right
					margin 0 1em 0 0

				.tag
					background azul
					color white
					border-radius 0.5em
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0

			.imagen
				float left
				margin 0

				img
					height 160px
					vertical-align top
					width 120px

@media screen and (min-width: 768px)

	.posts 
		.post
			width 48%
			display inline-block
			vertical-align top

			&:nth-child(odd)
				margin-right 2%

	header
		.titular
			.publicar
				padding-left 3em
				position relative

				&:before
					font-size 2.5em		
					position absolute
					right 1.7em
					top -0.2em